{# Template général de la page #}
{% extends 'base.html.twig' %}

{% block title %}
	Bien
{% endblock %}

{% block stylesheets %}
	<link href="https://bootswatch.com/4/lumen/bootstrap.min.css" rel="stylesheet"/>
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" rel="stylesheet"/>
{% endblock %}

{% block body %}

	{% include 'style/_header.html.twig' %}
	<div style="background-color : white">

		<div class="container bg-light">

			<div class="container bg-light">

				<div class="alert alert-dismissible alert-secondary ">
					<h1 class="page-section-heading text-center text-black">
						<i class="fa-solid fa-arrow-down"></i>
						<strong>{{titre}}</strong>
						<i class="fa-solid fa-arrow-down"></i>
					</h1>
				</div>

				<div class="row">

					<div class="col">
						<div class="card shadow-sm">
							<div class="card-body">
								<p class="card-text">
									<h2>
										<strong>Prix</strong>
										:
										{{prix}}
										€</h2>
								</p>
								<div class="d-flex justify-content-between align-items-center"></div>
							</div>
							<img src="" class="img-fluid" alt=""/>
						</div>
					</div>
					<div class="col">
						<div class="card shadow-sm">
							<div class="card-body">
								<p class="card-text">
									<h2>
										<strong>CP</strong>
										:
										{{cp}}</h2>
								</p>
								<div class="d-flex justify-content-between align-items-center"></div>
							</div>
							<img src="" class="img-fluid" alt=""/>
						</div>
					</div>
					<div class="col">
						<div class="card shadow-sm">
							<div class="card-body">
								<p class="card-text">
									<h2>
										<strong>Surface</strong>
										:
										{{surface}}
										m2</h2>
								</p>
								<div class="d-flex justify-content-between align-items-center"></div>
							</div>
							<img src="" class="img-fluid" alt=""/>
						</div>
					</div>
				</div>

				<hr/>

				<div class="row">

					<div class="col">
						<div class="card shadow-sm">
							<div class="card-body">
								<p class="card-text">
									<h2>
										<strong>Type</strong>
										:
										{{type}}</h2>
								</p>
								<div class="d-flex justify-content-between align-items-center"></div>
							</div>
							<img src="" class="img-fluid" alt=""/>
						</div>
					</div>
					<div class="col">
						<div class="card shadow-sm">
							<div class="card-body">
								<p class="card-text">
									<h2>
										<strong>Reference</strong>
										:
										{{reference}}
									</h2>
								</p>
								<div class="d-flex justify-content-between align-items-center"></div>
							</div>
							<img src="" class="img-fluid" alt=""/>
						</div>
					</div>
				</div>

				<hr/>

				<div class="col">
					<div class="card shadow-sm">
						<div class="card-body">
							<p class="card-text">
								<h1>
									<strong>Description du bien :</strong>
								</h1>
								<h3>-
									{{description}}</h3>
							</p>
							<div class="card-body">
                                <button type="button" class="btn btn-success btn-lg">Ajouter le Bien</button>

							</div>
						</p>
					</div>
				</div>
			</div>
		</div>

	</div>
</div></div>{% endblock %}
