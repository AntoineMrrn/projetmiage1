{# Template général de la page #}
{% extends 'base.html.twig' %}

{% block title %}
	Ajout d'une categorie
{% endblock %}

{% block stylesheets %}
	<link href="https://bootswatch.com/4/lumen/bootstrap.min.css" rel="stylesheet"/>
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" rel="stylesheet"/>
{% endblock %}

{% block body %}

	{% include 'shared/_header.html.twig' %}
	<div style="background-color : white">
		<div class="container bg-light">

			<div class="alert alert-dismissible alert-secondary ">
				<h1 class="page-section-heading text-center text-black">
					<i class="fa-solid fa-arrow-down"></i>
					Ajouter une catégorie
					<i class="fa-solid fa-arrow-down"></i>
				</h1>
			</div>
			<a class="" href="/admin">
				<button type="button" class="btn btn-info">Revenir au menu admin</button>
			</a>
			<form>
				<fieldset>
					<legend>
						<hr/>
						<strong>- Ajout d'une catégorie :</strong>
						<hr/>
					</legend>
					<div class="form-group">
						<label for="exampleInputEmail1" class="form-label mt-4">Nom de la catégorie</label>
						<input type="text" class="form-control" id="nom_cat" name="nom_categorie" placeholder="Entrez un nom">
					</div>
					<button type="submit" class="btn btn-primary">Ajouter la catégorie</button>
				</fieldset>
			</form>
		</div>
	</div>
{% endblock %}
